<?php   
 $x = 8; 
 echo "Value is now $x. \n";    
 $x += 2; 
 echo "Add 2. Value is now $x. \n";    
 $x -= 4; 
 echo "Subtract 4. Value is now $x. \n";   
 $x *= 5; 
 echo "Multiply by 5. Value is now $x. \n";   
 $x /= 3; 
 echo "Divide by 3. Value is now $x. \n";   
 $x++; 
 echo "Increment value by one. Value is now $x. \n";   
 $x--; 
 echo "Decrement value by one. Value is now $x.";   
 ?> 

